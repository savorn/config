# increase volume (pulseaudio)
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
	XF86AudioRaiseVolume

# decrease volume (pulseaudio)
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
	XF86AudioLowerVolume

# mute volume (pulseaudio)
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute

# increase backlight
"xbacklight -inc 10"
	XF86MonBrightnessUp

# decrease backlight
"xbacklight -dec 10"
	XF86MonBrightnessDown
