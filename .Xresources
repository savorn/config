! ---------- URxvt settings ----------
! directory to icon file
URxvt.iconFile: /usr/share/icons/Papirus-Adapta/16x16/apps/Terminal.svg
! disable scrollbar on the right
URxvt.scrollBar: 0
! decrease spacing between letters
URxvt.letterSpace: -1
! font
URxvt.font: xft:Fira Mono:size=11,style=medium
! bold font
Urxvt.boldFont: xft:Fira Mono:pixelsize=11,style=bold

! ---------- Fontconfig settings ----------
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintnone
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.dpi: 96
