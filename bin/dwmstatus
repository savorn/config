#!/bin/bash

timedate () {
	printdate=$(date +"%d-%b %I:%M %p")
	echo $printdate
}

getdisk () {
	printdisk=$(df -h . | grep '/home' | awk '{ print $4 }')
	echo "/home $printdisk"
}

getload () {
	printload=$(cat /proc/loadavg | awk '{ print $1, $2, $3 }')
	echo $printload
}

getmem () {
	printmem=$(free -m | grep 'Mem:' | awk '{ print $3"MB","/",$2"MB" }')
	echo $printmem
}

while true; do
	xsetroot -name "$(getdisk) | $(getmem) | $(getload) | $(timedate)"
	sleep 1s
done
