#!/bin/bash

timedate () {
	printdate=$(date +"%H:%M")
	echo $printdate
}

getvolume () {
	printvol=$(amixer get Master | grep 'Front Left:' | awk '{ print $5 }' | tr -d [])
	echo "vol: $printvol"
}

getbatt () {
	printbatt=$(cat /sys/class/power_supply/BAT1/capacity)
	echo "batt: $printbatt%"
}

getdisk () {
	printdisk=$(df -h . | grep '/home' | awk '{ print $4 }')
	echo "/home $printdisk"
}

while true; do
	xsetroot -name "$(getdisk) | $(getvolume) | $(getbatt) | $(timedate)"
	sleep 1s
done
