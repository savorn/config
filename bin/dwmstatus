#!/bin/bash

timedate () {
	printdate=$(date +"%H:%M")
	echo $printdate
}

getvolume () {
	printvol=$(amixer get Master | grep 'Front Left:' | awk '{ print $5 }' | tr -d [])
	echo "vol: $printvol"
}

getbatt () {
	printbatt=$(cat /sys/class/power_supply/BAT1/capacity)
	echo "batt: $printbatt%"
}

while true; do
	xsetroot -name "$(getvolume) | $(getbatt) | $(timedate)"
	sleep 10s
done
